<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Detail.DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wood"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#99000000"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/detail_back_button"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="42dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/product_detail_title"
            android:text="fafa"></TextView>

        <ImageView
            android:id="@+id/product_order_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/order2"
            android:visibility="invisible"/>



    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17">


    </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity=""


            android:background="#99000000"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/taal_button"
                android:weightSum="6"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/k"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="5dp"
                    app:srcCompat="@drawable/language" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="Taal"
                    android:gravity="center"

                    android:textSize="18dp"
                    android:textColor="@color/white"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/service_button"
                android:weightSum="6"
                android:layout_marginRight="10dp"
                android:background="@drawable/back"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/product_ober_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ober" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="Service"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    >

                </TextView>
                <!--                <ImageView-->
                <!--                    android:id="@+id/battery"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="0dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    app:srcCompat="@drawable/battery" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/rekening_button"
                android:weightSum="6"
                android:layout_marginRight="5dp"
                android:background="@drawable/back"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:padding="5dp"
                    app:srcCompat="@drawable/order" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="Rekening"
                    android:gravity="center"

                    android:textSize="18dp"
                    android:textColor="@color/white"
                    >

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>